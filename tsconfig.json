{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react-native",
        "lib": ["dom", "esnext"],
        "moduleResolution": "bundler",
        "module": "ESNext",
        "noEmit": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "src/types/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}